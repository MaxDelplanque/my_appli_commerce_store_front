{% extends "layout.njk" %}

{% block content %}
  <div class="container">
    <div class="text-center"><h1>Categories</h1></div>
      <div class="row">
        <div class="col col-md-12">
          <ul class="list-group">
            {% for category in categories %}
              <li class="list-group-item"><a href="http://localhost:3000/categories/{{category.id}}/products">{{category.label}}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
  </div>
{% endblock %}
